    "version": "0.2.0",
    "configurations": [

        {
            "name": "controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "UNDISTRO_DEBUG":"true"
            },
            "args": []
        },
        {
            "name": "CLI - Move",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/undistro/main.go",
            "env": {
                "UNDISTRO_DEBUG":"true"
            },
            "args": [
                "--config",
                "${workspaceFolder}/undistro.yaml",
                "move",
                "--to-kubeconfig",
                "${workspaceFolder}/demo.kubeconfig"
            ]
        }
    ]
}